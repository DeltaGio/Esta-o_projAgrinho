  if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) { // Endereço I2C 0x3C padrão
  Serial.println(F("Falha ao iniciar o OLED"));
  while(true); // Trava aqui
  }
  display.clearDisplay();
  display.setTextSize(1);      // Tamanho da fonte
  display.setTextColor(SSD1306_WHITE); // Cor branca
  display.setCursor(0,0);
  display.println("Estacao Online!");
  display.display();

  timer.setInterval(60000L, sendSensorData);
}

void loop() {
  Blynk.run();
  timer.run();
}


void sendSensorData() { 
  // Lendo a temperatura e umidade
  float h = dht.readHumidity();
  float t = dht.readTemperature();

  // Se a leitura falhar, reinicie a função
  if (isnan(h) || isnan(t)) {
    Serial.println("Falha na leitura do sensor DHT11!");
    return;
  }

    // Desenha o ícone
  display.clearDisplay();
  display.drawBitmap(0, 0, logo_bmp, bitmap_height, bitmap_width, WHITE);

  display.setFont(&FreeMonoBold18pt7b);
  display.setTextColor(WHITE);        // Draw white text
  display.setCursor(45, 28);            // Start at top-left corner
  display.print((int)t);
  display.drawCircle(92, 8, 3, WHITE);
  display.setCursor(100, 27);
  display.print("C");
  display.setCursor(45, 62);
  display.print((int)h);
  display.print("%");
  
  display.display();


 
  int mq2Value = analogRead(18); // Leitura analógica do MQ-2
  float mq2Percent = (mq2Value / 4095.0) * 100.0;

  // Enviar ao Blynk
  Blynk.virtualWrite(V0, h);
  Blynk.virtualWrite(V1, t);
  Blynk.virtualWrite(V2, mq2Percent); // V2: valor de fumaça/gás do MQ-2

  Serial.println(h);
  Serial.println(t);
  Serial.println(mq2Percent);
  Serial.println();

}
